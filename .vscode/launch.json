{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/source/cli/main",
            "args": [
                "--server"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/source/cli",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build CLI",
            "miDebuggerPath": "/usr/bin/gdb"
        },
